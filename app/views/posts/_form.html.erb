  <div class="page_wrapper">
    <%= form_for @post, :html => {:multipart => true } do |f| %>
        <% if @post.errors.any? %>
            <div>
              <h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
              <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <p class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, :class => "form-control" %>
        </p>
        <p>
          <%= f.file_field :post_image %>
        </p>
        <p>
          <%= f.label :remote_post_image_url, "or load with URL" %><br>
          <%= f.text_field :remote_post_image_url %>
        </p>
        <p class="form-group">
          <%= f.label :body %><br>
          <%= f.text_area :body, id: "wysiwyg" %>
        </p>
        <p>
          <%= f.submit %>
        </p>
    <% end %>
  </div>
<script>
  $('#wysiwyg').froalaEditor({
    toolbarInline: false,
    heightMin: '200px',
    charCounterCount: true,
    htmlAllowedTags: ['p', 'h1', 'h2', 'h3', 'h4', 'h5', 'h6'],
    buttons: ['bold', 'italic', 'underline','paragraphFormat','align',
      'formatUL', 'formatOL', 'outdent', 'indent',
      'insertLink', 'html'],
  })
</script>