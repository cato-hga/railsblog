
  <div class=" container page_wrapper  ">
    <% @posts.each do |post| %>
    <div class=" col-lg-12 color">
      <h2 class="text-muted"><%= link_to post.title, post %></h2>
      <h2 class="text-muted"><%= image_tag post.post_image_url(:thumb).to_s %></h2>
    </div>
    <div class="col-lg-12 color">
      <p class="wrap"><%=  post.body.truncate_words(15) %> <%= link_to '...Read more', post %></p>
      <p>Posted on <%= post.created_at.strftime("%B, %d, %Y")%></p>
    </div>
    <% end %>
  </div>


<%= will_paginate @posts %>



